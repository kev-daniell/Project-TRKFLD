<% layout('layout/boilerplate') %>
    <div class="Posts">
        <div class="mt-3 card text-dark bg-light mb-3">
            <div class="card-body">
                <div class="d-flex w-100 justify-content-between">
                </div>
                <div class="d-flex w-100 justify-content-between">
                    <h4 class="card-title">
                        <%= post.title %>
                    </h4>
                </div>

                <% if(post.image.length> 0){ %>
                    <div id="carouselExampleControls" class="carousel slide">
                        <div class="carousel-inner">
                            <% post.image.forEach((img, i)=> {%>
                                <div class="carousel-item <%= i === 0 ? 'active':'' %> " data-bs-interval="10000000000">
                                    <img src="<%=img.url%> " class="d-block w-100" alt="">
                                </div>
                                <% }) %>
                        </div>
                        <% if(post.image.length> 1){ %>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            <% } %>
                    </div>
                    <% } %>


                        <p class="card-text">
                            <%= post.text %>
                        </p>
                        <a href="/" class="btn btn-sm btn-outline-secondary">Back to All
                            Posts</a>
                        <a class="btn btn-sm btn-outline-secondary" href="/posts/<%= post._id %>/edit">Edit</a>
            </div>
        </div>



    </div>