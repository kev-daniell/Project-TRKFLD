<% layout('layout/boilerplate') %>
    <div class="Posts">
        <div class="mt-3 card text-dark bg-light mb-3">
            <div class="card-body">
                <div class="d-flex w-100 justify-content-between">
                </div>
                <div class="d-flex w-100 justify-content-between">
                    <h4 class="card-title">
                        <%= post.title %>
                    </h4>
                </div>

                <img class="img-fluid" src="<%= post.image %> " alt="post image">


                <p class="card-text">
                    <%= post.text %>
                </p>
                <a href="/" class="btn btn-sm btn-outline-secondary">Back to All
                    Posts</a>
                <a class="btn btn-sm btn-outline-secondary" href="/posts/<%= post._id %>/edit">Edit</a>
            </div>
        </div>



    </div>