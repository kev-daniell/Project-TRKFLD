<% layout('layout/boilerplate') %>
    <div class="container Posts">
        <h1>Listings on SchoolApp: </h1>
        <br>
        <a href="/create" class="btn btn-outline-secondary">+ Create a Listing</a>
        <hr>
        <% if(posts.length==0){ %>
            <div class="text-center mb-4 text-muted">
                <small>Seems like a desert here, be the first to post!</small>
            </div>
            <% } %>

                <% for(let i=0; i < posts.length; i++){ %>
                    <div class="mb-3">
                        <div class="list-group lightLG">
                            <a href="/posts/<%= posts[length - i]._id %>"
                                class="list-group-item list-group-item list-group-item-light">
                                <div class="d-flex w-100 justify-content-between">
                                </div>
                                <div class="d-flex w-100 justify-content-between">
                                    <h3 class="mb-2">
                                        <%= posts[length - i].title%>
                                    </h3>
                                </div>
                                <img class="img-fluid" src="<%= posts[length - i].image %> " alt="post image">
                                <% if(posts[length-i].text.length < 200){ %>
                                    <p class="mt-3 mb-0">
                                        <%= posts[length-i].text %>
                                    </p>
                                    <% } else{ %>
                                        <p class="mt-1">
                                            <%= posts[length - i].text.substr(0,150)%><span
                                                    style="color: rgb(66,139,202);">. . .[read more]</span>
                                        </p>
                                        <% } %>
                                            <br>
                            </a>
                        </div>
                    </div>
                    <% } %>
    </div>